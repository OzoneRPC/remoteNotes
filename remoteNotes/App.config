<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.runtime.remoting>
    <application>

      <client url="http://localhost:65000">
        <wellknown mode="Singleton"
                   type="remoteNotesLib.NotesSingleton, remoteNotesLib"
                   url="http://localhost:65000/NotesSingleton.rem" />

        <wellknown mode="SingleCall"
                   type="remoteNotesLib.NoteTransactionSinglecall, remoteNotesLib"
                   url="http://localhost:65000/NoteTransactionSinglecall.rem" />

        <activated type="remoteNotesLib.NotesClientActivated, remoteNotesLib" />
      </client>

      <channels>
        <channel port = "65001" ref="http" >

          <clientProviders>
            <formatter ref="binary"/>
          </clientProviders>

          <serverProviders>
            <formatter ref="binary" />
          </serverProviders>

        </channel>
      </channels>

    </application>
  </system.runtime.remoting>
</configuration>
